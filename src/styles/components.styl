body {
    height: 100vh;
    overflow: hidden;
    font-family: Lato-Reg;
    display: flex;
    flex-direction: column;
}

ul {
    list-style: none;
    margin: 0;
    padding: 0;
}

a {
    text-decoration: none;

    &:visited {
        color: #000;
    }
}

.main-container {
    flex: 1;
    display: flex;

    .aside {
        flex: 0 0 400px;
        box-shadow: inset 0 0 10px rgba(255, 193, 7, 1);
        position: relative;

        &__header {
            padding: 20px;
            background: linear-gradient(27deg, #151515 5px, transparent 5px) 0 5px, linear-gradient(207deg, #151515 5px, transparent 5px) 10px 0px, linear-gradient(27deg, #222 5px, transparent 5px) 0px 10px, linear-gradient(207deg, #222 5px, transparent 5px) 10px 5px, linear-gradient(90deg, #1b1b1b 10px, transparent 10px), linear-gradient(#1d1d1d 25%, #1a1a1a 25%, #1a1a1a 50%, transparent 50%, transparent 75%, #242424 75%, #242424);
            background-color: #131313;
            background-size: 20px 20px;
            height: 150px;
            display: flex;
            justify-content: center;
            align-items: center;

            h1 {
                font-family: Mont-Reg;
                color: rgba(255, 255, 255, 0.5);
            }
        }

        &__container {
            display: flex;
            flex-direction: column;

            a {
                width: 100%;
                padding: 20px;
                text-align: center;
                cursor: pointer;
                display: flex;
                justify-content: flex-start;
                align-items: center;

                &.active {
                    background-color: rgba(#aeaeae, 0.3);
                }

                &:hover {
                    background-color: alpha(#dedede, 0.5);
                }

                span.line {
                    width: 0;
                    height: 2px;
                    background-color: black;
                    margin-right: 10px;
                }
            }
        }

        &__footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            height: 50px;
            text-align: center;
            color: #aeaeae;
        }
    }

    .main-section {
        flex: 1;
        background-color: rgba(255, 193, 7, 1);
        position: relative;

        .aside-toggle {
            position: absolute;
            display: flex;
            flex-direction: column;
            top: 68px;
            left: 30px;
            cursor: pointer;

            .bar {
                display: inline-block;
                width: 26px;
                height: 4px;
                background-color: alpha(#ffffff, 0.5);
                margin-bottom: 3px;
            }
        }

        .main-footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            height: 50px;
            text-align: center;
            color: #aeaeae;
            padding: 0 30px;

            .social-media {
                display: flex;
                justify-content: flex-end;

                li {
                    padding-left: 30px;

                    a {
                        color: rgba(255, 255, 255, 0.75);
                    }
                }
            }
        }
    }
}
